<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:padding="@dimen/activity_vertical_margin"
    tools:context=".ui.MainActivity">

    <EditText
        android:id="@+id/edit_text_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_add_movie_list"
        android:inputType="textCapWords"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:imeOptions="actionDone|flagNoExtractUi"
        android:drawableLeft="@drawable/ic_movie_dark"
        android:drawableStart="@drawable/ic_movie_dark"
        android:drawablePadding="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="20dp"
        />

    <Spinner
        android:id="@+id/mSpinner"
        android:layout_below="@+id/edit_text_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/select_genre"
        android:entries="@array/genre_array"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="20dp"/>

    <EditText
        android:layout_below="@+id/mSpinner"
        android:id="@+id/edit_text_list_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_add_movie_year"
        android:inputType="number"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:imeOptions="actionDone|flagNoExtractUi"
        android:drawableLeft="@drawable/ic_movie_dark"
        android:drawableStart="@drawable/ic_movie_dark"
        android:drawablePadding="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="20dp"
        />

</RelativeLayout>