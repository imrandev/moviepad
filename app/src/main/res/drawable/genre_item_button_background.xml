<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="#2D2F31"/>

            <corners
                android:radius="20dp"/>

            <size
                android:width="100dp"
                android:height="30dp"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <solid
                android:color="#99CC00"/>

            <corners
                android:radius="20dp"/>

            <size
                android:width="100dp"
                android:height="30dp"/>
        </shape>
    </item>
</selector>